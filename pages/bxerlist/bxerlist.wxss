.notice {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%rpx;
  height: 76rpx;
  background-color: #fff;
}
.tip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 74rpx;
  width: 373rpx;
  font-size: 23rpx;
  color: #A1A1A1;
  letter-spacing: -0.74rpx;
}
.vline {
  width: 2rpx;
  height: 50rpx;
  background-color: #D8D8D8;
}
.bxer-list-wrap {
  margin-top: 20rpx;
  padding-left: 37rpx;
  background-color: #fff;
}
.bxer-list {
  position: relative;
  display: flex;
  box-sizing: border-box;
  width: 100%;
  height: 267rpx;
  padding: 25rpx 37rpx 23rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid #DDD;
}
.bxer-list:last-child {
  border-bottom: none !important;
}
.bxer-list .bxer-left {
  margin-right: 25.5rpx;
  width: 130rpx;
  height: 100%;
}
.bxer-list .bxer-left .avatar {
  width: 130rpx;
  height: 130rpx;
  overflow: hidden;
  border-radius: 50%;
}
.bxer-list .bxer-left .avatar .bxer-photo {
  width: 130rpx;
  height: 130rpx;
}
.bxer-list .bxer-left .status {
  margin: 31rpx auto;
  width: 69rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  color: #FFF;
  font-size: 20rpx;
  border-radius: 5rpx;
}
.bxer-list .bxer-left .status.online {
  background-color: #7ED321;
}
.bxer-list .bxer-left .status.offline {
  background-color: #9B9B9B;
}
.bxer-list .bxer-center {
  flex: 1;
  width: 435rpx;
  height: 100%;
}
.bxer-list .bxer-center .personal-info .bxer-name {
  font-size: 29rpx;
  line-height: 41rpx;
}
.bxer-list .bxer-center .personal-info .bxer-intro {
  display: flex;
}
.bxer-list .bxer-center .personal-info .bxer-intro .bxer-profile {
  margin-top: 5rpx;
  margin-right: 25rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #9B9B9B;
}
.bxer-list .bxer-center .personal-info .bxer-intro .bxer-profile:last-child {
  margin-right: 0 !important;
}
.bxer-list .bxer-center .bxer-item-style {
  display: flex;
  margin-top: 17rpx;
}
.bxer-list .bxer-center .bxer-item-style .text {
  margin-right: 15rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #9B9B9B;
}
.bxer-list .bxer-center .bxer-item-style .text:last-child {
  margin-right: 0 !important;
}
.bxer-list .bxer-center .bxer-item-style .text .label {
  margin-right: 5rpx;
}
.bxer-list .bxer-center .bxer-item-style .text .orange-text-color {
  color: #FF6600;
}
.bxer-list .bxer-center .bxer-tag {
  display: flex;
  flex-wrap: nowrap;
  width: 500rpx;
  margin-top: 19rpx;
  margin-bottom: 23rpx;
}
.bxer-list .bxer-center .bxer-tag .tag-item {
  margin-right: 15rpx;
  padding: 0 13rpx;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 5rpx;
  color: #FFF;
  background-color: #FF6600;
  opacity: .8;
  font-size: 20rpx;
}
.bxer-list .bxer-center .bxer-tag .tag-item:last-child {
  margin-right: 0 !important;
}
.bxer-list .bxer-right {
  width: 128rpx;
  height: 100%;
}
.bxer-list .bxer-right .btn {
  margin-top: 9rpx;
  padding: 0 !important;
  width: 111rpx;
  height: 51rpx;
  line-height: 51rpx;
  font-size: 29rpx;
  color: #FFF;
  background: #FF6600;
  border-radius: 11rpx;
}
