.notice {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%rpx;
  height: 76rpx;
  padding-left: 36rpx;
  background-color: #fff;
}
.notice .avatar {
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 20rpx;
}
.notice .des-name {
  font-size: 26rpx;
  line-height: 76rpx;
}
.notice .btn-contact {
  margin-left: 350rpx;
  background-color: #FF6600;
  width: 161rpx;
  height: 52rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  letter-spacing: -0.6rpx;
}
.details {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 25rpx;
}
.details .item {
  display: flex;
  margin-top: 15rpx;
}
.details .process {
  display: flex;
  flex-direction: column;
  align-items: center;
  transform: translateY(50%);
}
.details .item .process .point {
  width: 20rpx;
  height: 20rpx;
  background-color: #FF6600;
  border-radius: 50%;
}
.details .item .process .line {
  height: 250rpx;
  width: 4rpx;
  margin-top: 15rpx;
  border-radius: 2rpx;
  background-color: #FF6600;
}
.details .item:last-child .process .line {
  display: none;
}
.details .item .state {
  display: flex;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-left: 30rpx;
  padding-top: 12rpx;
  width: 650rpx;
  background-color: #fff;
}
.details .item .state .state-title {
  display: flex;
  height: 100%;
  width: 110rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.details .item .state .state-title .title {
  font-size: 23rpx;
  color: #FF6600;
}
.details .item .state .state-content-done {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
}
.details .item .state .state-content-done .btn-confirm {
  margin-top: 10%;
  width: 161rpx;
  height: 52rpx;
  background-color: #fff;
  font-size: 20rpx;
  color: #FF6600;
}
.details .item .state .state-content-done .btn-confirm:after {
  border-color: #FF6600
}
.details .item .state .state-content-done .tips {
  margin-top: 42rpx;
  text-align: center;
  font-size: 20rpx;
  color: #9B9B9B;
}
.details .item .state .state-content-pending {
  display: flex;
  height: 100%;
  width: 80%;
  flex-direction: column;
  align-items: center;
}
.details .item .state .state-content-pending .amount {
  display: flex;
  width: 80%;
  justify-content: space-between;
  line-height: 2;
}
.details .item .state .state-content-pending .amount .amount-title {
  font-size: 20rpx;
  color: #4A4A4A;
}
.details .item .state .state-content-pending .amount .amount-sum {
  font-size: 20rpx;
  color: #FF6600;
}
.details .item .state .state-content-pending .amount .blod {
  font-weight: 500;
}
.details .item .state .state-content-pending .tips{
  margin-top: 70rpx;
  text-align: center;
  font-size: 20rpx;
  color: #9B9B9B;
}
.details .item .state .state-content-pending .fber{
  display: flex;
  width: 80%;
  height: 110rpx;
  align-items: center;
  justify-content: space-between;
}
.details .item .state .state-content-pending .fber .left {
  display: flex;
  justify-content: center;
  align-items: center;
}
.details .item .state .state-content-pending .fber .fber-avatar {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 18rpx;
}
.details .item .state .state-content-pending .fber .icon {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
  margin-right: 28rpx;
}
.details .item .state .state-content-pending .fber .name {
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
}
.details .item .state .state-content-pending .fber .linkdes {
  line-height: 60rpx;
  text-align: center;
  font-size: 23rpx;
  color: #777577;
}
.details .item .state .state-content-pending .fber .add-icon {
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
}
.details .item .state .state-content-pending .suggest {
  display: flex;
  width: 80%;
  font-size: 20rpx;
  line-height: 33rpx;
}
